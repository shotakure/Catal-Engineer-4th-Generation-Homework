<h1>Listing Groups</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
   <% @groups.each do |group| %>
    <tr>
      <td><%= group.id %></td>
      <td><%= group.name %></td>
      <td><%= link_to 'Show', group_path(group.id) %></td>
      <td><%= link_to 'Edit', edit_group_path(group.id) %></td>
      <td><%= link_to 'Destroy', group, method: :delete, data:{ confirm:'本当に削除していいですか？'}%></td>
    </tr>
   <% end %>
  </tbody>
</table>

<%= link_to 'New Group', new_group_path %>
