<h1>Listing Notes</h1>

 <table class= "table table-bordered table table-striped">
  <thead>
    <tr>
      <th><p class= "text-center">ID</p></th>
      <th>Date</th>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
   <% @notes.each do |note| %>
    <tr>
      <td><%= note.id %></td>
      <td><%= note.date.strftime('%Y-%m-%d') %></td>
      <td><%= note.title %></td>
      <td><%= note.body.html_safe %></td>
      <td><%= link_to 'Show', note_path(note.id) %></td>
      <td><%= link_to 'Edit', edit_note_path(note.id) %></td>
      <td><%= link_to 'Destroy', note, method: :delete, data:{ confirm:'本当に削除していいですか？'} %></td>
    </tr>
   <% end %>
  </tbody>
 </table>

<%= link_to 'New', new_note_path %>

